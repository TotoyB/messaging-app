<div class="ui large menu">
  <div class="ui container">
    <%= link_to "Home", "#", class: 'item' %>
    <%= link_to "Chatroom", root_path, class: 'item' %>
    <div class="right menu">
      <% if !logged_in? %>
        <div class="item">
          <div>Sign Up</div>
        </div>
        <div class="item">
          <%= link_to 'Log In', login_path %>
        </div>
      <% end %>
      <% if logged_in? %>
        <div class="ui dropdown item">
          <%= current_user.username %> <i class="dropdown icon"></i>
          <div class="menu">
            <a class="item">View Profile</a>
            <a class="item">Edit Profile</a>
            <div class="divider"></div>
            <%= link_to 'Log out', logout_path, class: "item", method: :delete %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>