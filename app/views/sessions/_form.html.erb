<h1 align="center"> Welcome to Messaging App </h1>
<h2 class="ui center aligned medium icon header">
  <i class="circular blue address book outline icon"></i>
  Log In
</h2>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_for(:session, html: {class: 'ui form', role: 'form'}, url: login_path) do |form| %>

        <div class="field">
          <%= form.label :username %>
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= form.text_field :username, placeholder: 'Enter Username' %>
          </div>
        </div>

        <div class="field">
          <%= form.label :password %>
          <div class="ui left icon input">
            <%= form.password_field :password, placeholder: 'Enter Password' %>
            <i class="lock icon"></i>
          </div>
        </div>

        <%= form.submit 'Log In', class: 'ui blue submit button' %>
      <% end %>
    </div>
    <div class="middle aligned column">
      <div class="ui big button">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>